@model IEnumerable<MyCryptoPortfolio.Domain.Entities.Transaction>
@using MyCryptoPortfolio.Domain.Entities

@{
    ViewData["Title"] = "Transaction History";
}

<div class="min-h-screen py-8">
    
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">ðŸ“œ History</h1>
            <p class="text-slate-500">Filter dan unduh riwayat transaksi Anda.</p>
        </div>
        
        <a asp-action="Create" class="inline-flex items-center justify-center px-6 py-2.5 font-semibold text-white transition-all duration-200 bg-brand-600 rounded-xl hover:bg-brand-700 shadow-lg shadow-brand-500/30">
            <i class="ph-bold ph-plus mr-2"></i> Transaksi Baru
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5 mb-6">
        <form method="get" asp-action="History" class="flex flex-col md:flex-row gap-4 items-end">
            
            <div class="w-full md:w-auto">
                <label class="block text-xs font-bold text-slate-400 uppercase tracking-wider mb-1">Dari Tanggal</label>
                <input type="date" name="startDate" value="@ViewBag.StartDate" class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:border-brand-500 focus:ring-2 focus:ring-brand-500/20 transition text-slate-700 font-medium" />
            </div>

            <div class="w-full md:w-auto">
                <label class="block text-xs font-bold text-slate-400 uppercase tracking-wider mb-1">Sampai Tanggal</label>
                <input type="date" name="endDate" value="@ViewBag.EndDate" class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:border-brand-500 focus:ring-2 focus:ring-brand-500/20 transition text-slate-700 font-medium" />
            </div>

            <div class="flex gap-2 w-full md:w-auto">
                <button type="submit" class="px-5 py-2 bg-slate-800 text-white font-bold rounded-lg hover:bg-slate-900 transition flex items-center gap-2 shadow-md">
                    <i class="ph-bold ph-funnel"></i> Filter
                </button>
                
                <a asp-action="History" class="px-4 py-2 bg-white border border-slate-200 text-slate-600 font-bold rounded-lg hover:bg-slate-50 transition" title="Reset Filter">
                    <i class="ph-bold ph-arrow-counter-clockwise"></i>
                </a>
            </div>

            <div class="flex-grow"></div>

            <div class="w-full md:w-auto">
                <a href="@Url.Action("ExportToCsv", new { startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })" class="w-full px-5 py-2 bg-emerald-600 text-white font-bold rounded-lg hover:bg-emerald-700 transition flex items-center justify-center gap-2 shadow-md shadow-emerald-500/20">
                    <i class="ph-bold ph-file-csv"></i> Export CSV
                </a>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-[2rem] shadow-xl border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full whitespace-nowrap">
                <thead class="bg-slate-50 border-b border-slate-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-400 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-400 uppercase tracking-wider">Asset</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-400 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-400 uppercase tracking-wider">Price (IDR)</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-400 uppercase tracking-wider">Quantity</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-400 uppercase tracking-wider">Total</th>
                        <th class="px-6 py-4 text-center text-xs font-bold text-slate-400 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-slate-400 italic">
                                Tidak ada transaksi yang ditemukan untuk periode ini.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-50/80 transition group">
                                <td class="px-6 py-4">
                                    <div class="flex flex-col">
                                        <span class="font-bold text-slate-700">@item.Date.ToString("dd MMM yyyy")</span>
                                        <span class="text-xs text-slate-400">@item.Date.ToString("HH:mm")</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 font-bold text-xs">
                                            @item.Ticker.Substring(0, 1)
                                        </div>
                                        <span class="font-bold text-slate-800">@item.Ticker</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-bold @(item.Type == TransactionType.Buy ? "bg-emerald-50 text-emerald-700" : "bg-rose-50 text-rose-700")">
                                        @item.Type.ToString().ToUpper()
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right font-medium text-slate-600">@item.Price.ToString("N0")</td>
                                <td class="px-6 py-4 text-right font-bold text-slate-800">@item.Quantity.ToString("N4")</td>
                                <td class="px-6 py-4 text-right font-bold text-slate-900">@item.TotalAmount.ToString("N0")</td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center justify-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-brand-600 hover:text-brand-800 text-sm font-bold">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>