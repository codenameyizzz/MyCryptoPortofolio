@model MyCryptoPortfolio.Web.ViewModels.LoginViewModel
@{ ViewData["Title"] = "Log in"; }

<div class="flex justify-center items-center min-h-[calc(100vh-200px)]">
    <div class="w-full max-w-md">
        <div class="glass rounded-3xl shadow-xl overflow-hidden p-8 sm:p-10 relative">
            
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-gradient-to-tr from-brand-500 to-accent-500 rounded-2xl mx-auto flex items-center justify-center text-white text-3xl font-bold shadow-lg mb-4">
                    <i class="ph ph-sign-in"></i>
                </div>
                <h2 class="text-3xl font-extrabold text-slate-800 tracking-tight">Welcome Back</h2>
                <p class="text-slate-500 mt-2 text-sm">Please enter your details to sign in.</p>
            </div>

            <form asp-action="Login" method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium text-center"></div>

                <div>
                    <label asp-for="Email" class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1 ml-1"></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                            <i class="ph ph-envelope-simple text-xl"></i>
                        </div>
                        <input asp-for="Email" class="w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all duration-200" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 ml-1 block"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1 ml-1"></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                            <i class="ph ph-lock-key text-xl"></i>
                        </div>
                        <input asp-for="Password" type="password" class="w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all duration-200" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 ml-1 block"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" class="h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 rounded cursor-pointer" />
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-slate-600 cursor-pointer">Remember me</label>
                    </div>
                    <a href="#" class="text-sm font-semibold text-brand-600 hover:text-brand-700 transition">Forgot Password?</a>
                </div>

                <button type="submit" class="w-full py-3.5 px-4 bg-gradient-to-r from-brand-600 to-accent-600 hover:from-brand-700 hover:to-accent-700 text-white font-bold rounded-xl shadow-lg shadow-brand-500/30 transform transition hover:-translate-y-0.5 active:translate-y-0 duration-200">
                    Sign in
                </button>
            </form>

            <div class="mt-8 text-center">
                <p class="text-slate-500 text-sm">
                    Don't have an account? 
                    <a asp-action="Register" class="font-bold text-brand-600 hover:text-accent-600 transition ml-1">Create one now</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}